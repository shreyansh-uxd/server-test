# Always save exact versions (avoid ^ or ~)
save-exact=true

# Use legacy peer deps to avoid conflicts like vite@5 vs plugin-react@4
legacy-peer-deps=true

# Disable package-lock.json if you prefer clean installs each time
# package-lock=false

# Prefer local cache for faster installs
prefer-offline=true

# Disable optional dependencies to avoid OS-specific issues
optional=false

# Set strict registry to npmjs
registry=https://registry.npmjs.org/

# Ensure consistent install behavior
strict-peer-deps=false

# Auto retry installs on failure
fetch-retries=5
fetch-retry-factor=2
fetch-retry-mintimeout=1000
fetch-retry-maxtimeout=60000

# Allow Git-based dependencies
git-checks=false
